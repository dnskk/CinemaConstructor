@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}


<!-- home -->
<section class="home home--bg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="home__title"><b>NOW</b> IN THE CINEMA</h1>

                <button class="home__nav home__nav--prev" type="button">
                    <i class="icon ion-ios-arrow-round-back"></i>
                </button>
                <button class="home__nav home__nav--next" type="button">
                    <i class="icon ion-ios-arrow-round-forward"></i>
                </button>
            </div>
            <div class="col-12">
                <div class="owl-carousel home__carousel">
                    @foreach (var film in Model.CurrentFilms)
                    {
                        <div class="item">
                            <div class="card card--big">
                                <a href="#">
                                    <div class="card__cover">
                                        <img src="@Model.Posters[film.Id]" alt="">
                                    </div>
                                </a>
                                <div class="card__content">
                                    <h3 class="card__title"><a href="#">@film.Title</a></h3>
                                    <span class="card__category">
                                        <a href="#">@film.Genre</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section section--bg" data-bg="img/section/section.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="section__title">Expected premiere</h2>
            </div>
            @foreach (var film in Model.UpcomingFilms)
            {
                <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                    <div class="card">
                        <a href="#">
                            <div class="card__cover">
                                <img src="@Model.Posters[film.Id]" alt="">
                            </div>
                        </a>
                        <div class="card__content">
                            <h3 class="card__title"><a href="#">@film.Title</a></h3>
                            <span class="card__category">
                                <a href="#">@film.Genre</a>
                            </span>
                        </div>
                    </div>
                </div>
            }
            <div class="col-12">
                <a href="#" class="section__btn">Show more</a>
            </div>
        </div>
    </div>
</section>

<script>
    var headerHome = document.getElementById("headerHome");
    headerHome.href = "/?companyId=@(Model.Company.Id)";
</script>
