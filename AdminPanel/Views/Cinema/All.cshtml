@model AdminPanel.Models.CinemaViewModels.CinemaAllViewModel

@{
    ViewData["Title"] = "Cinemas";
}

<h2>Your cinemas</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        @for (var i = 0; i < Model.Cinemas.Count; i += 2)
        {
            <div class="card">
                <div class="card-header" style="padding-bottom: 0;">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h3 class="card-title">
                                @Model.Cinemas[i].Name
                            </h3>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-primary float-sm-right" style="padding-bottom: 2px; padding-top: 2px; padding-left: 16px; padding-right: 16px;">
                                Edit
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 style="margin-bottom: 2px;">Address</h6>@Model.Cinemas[i].Address
                    <hr style="margin-bottom: 4px; margin-top: 4px;" />
                    <h6 style="margin-bottom: 2px;">Phone</h6>@Model.Cinemas[i].Phone
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        @for (var i = 1; i < Model.Cinemas.Count; i += 2)
        {
            <div class="card">
                <div class="card-header" style="padding-bottom: 0;">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h3 class="card-title">
                                @Model.Cinemas[i].Name
                            </h3>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-primary float-sm-right" style="padding-bottom: 2px; padding-top: 2px; padding-left: 16px; padding-right: 16px;">
                                Edit
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 style="margin-bottom: 2px;">Address</h6>@Model.Cinemas[i].Address
                    <hr style="margin-bottom: 4px; margin-top: 4px;" />
                    <h6 style="margin-bottom: 2px;">Phone</h6>@Model.Cinemas[i].Phone
                </div>
            </div>
        }
    </div>
</div>
