@model AdminPanel.Models.HallViewModels.HallAllViewModel

@{
    ViewData["Title"] = "Cinema halls";
}

<h2>@ViewData["Title"]</h2>
<hr />

@foreach (var group in Model.GroupedHalls)
{
    var halls = group.ToList();
    <h4 style="margin-bottom: 0;">@group.Key</h4>
    <hr style="margin-top: 4px;" />
    <div class="row">
        <div class="col-md-6">
            @for (var i = 0; i < halls.Count; i += 2)
            {
                <div class="card">
                    <div class="card-header" style="padding-bottom: 0;">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h3 class="card-title">
                                    @halls[i].Name
                                </h3>
                            </div>
                            <div class="col-sm-6">
                                <a href="/Hall/SelectHall?hallId=@halls[i].Id" class="btn btn-primary float-sm-right" style="padding-bottom: 2px; padding-top: 2px; padding-left: 16px; padding-right: 16px;">
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h6 style="margin-bottom: 2px;">Number of seats</h6>@halls[i].Seats
                        <hr style="margin-bottom: 4px; margin-top: 4px;" />
                        <h6 style="margin-bottom: 2px;">3D</h6>@(halls[i].Is3D ? "Yes" : "No")
                        <hr style="margin-bottom: 4px; margin-top: 4px;" />
                        <h6 style="margin-bottom: 2px;">IMAX</h6>@(halls[i].IsImax ? "Yes" : "No")
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            @for (var i = 1; i < halls.Count; i += 2)
            {
                <div class="card">
                    <div class="card-header" style="padding-bottom: 0;">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h3 class="card-title">
                                    @halls[i].Name
                                </h3>
                            </div>
                            <div class="col-sm-6">
                                <a href="/Hall/SelectHall?hallId=@halls[i].Id" class="btn btn-primary float-sm-right" style="padding-bottom: 2px; padding-top: 2px; padding-left: 16px; padding-right: 16px;">
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <h6 style="margin-bottom: 2px;">Number of seats</h6>@halls[i].Seats
                        <hr style="margin-bottom: 4px; margin-top: 4px;" />
                        <h6 style="margin-bottom: 2px;">3D</h6>@(halls[i].Is3D ? "Yes" : "No")
                        <hr style="margin-bottom: 4px; margin-top: 4px;" />
                        <h6 style="margin-bottom: 2px;">IMAX</h6>@(halls[i].IsImax ? "Yes" : "No")
                    </div>
                </div>
            }
        </div>
    </div>

}